<?xml version="1.0" encoding="UTF-8"?>
	
<?import javafx.scene.layout.VBox?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
	
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EditVehicleController">
	<padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
	
    <Text text="Edit a Vehicle" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <Label fx:id="errorMessage" textFill="RED" />
    
    <Label text="year:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="year" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    
    <Label text="make:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="make" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
    <Label text="model" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
	<TextField fx:id="model" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
	
	<Label text="color" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
	<TextField fx:id="color" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
    <Label fx:id="errorMessage" textFill="RED" />
    
	<HBox spacing="10" alignment="bottom_right"  GridPane.columnIndex="1" GridPane.rowIndex="4">
		<Button fx:id="button" text="Save" onAction="#handleSaveButtonAction" />
		<Button text="Back"  onAction="#handleBackButtonAction" />
	</HBox>
</VBox>
